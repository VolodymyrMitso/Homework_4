<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/sw_switchTheme_MA"
        android:textOn="ON"
        android:textOff="OFF"

        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="75dp" />

    <Button
        style="@style/stl_bigButtonStyle"

        android:id="@+id/btn_Calculate_MA"
        android:text="Calculate"

        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/stl_littleButtonStyle"

        android:id="@+id/btn_FirstButton_MA"
        android:text="A"

        android:layout_above="@id/btn_Calculate_MA"
        android:layout_alignLeft="@id/btn_Calculate_MA"
        android:layout_alignStart="@id/btn_Calculate_MA" />

    <EditText
        style="@style/stl_littleButtonStyle"

        android:id="@+id/et_Sign_MA"
        android:gravity="center"

        android:layout_above="@id/btn_Calculate_MA"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/stl_littleButtonStyle"

        android:id="@+id/btn_SecondButton_MA"
        android:text="B"

        android:layout_above="@id/btn_Calculate_MA"
        android:layout_alignRight="@id/btn_Calculate_MA"
        android:layout_alignEnd="@id/btn_Calculate_MA" />

</RelativeLayout>