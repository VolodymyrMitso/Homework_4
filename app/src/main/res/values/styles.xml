<resources>

    <style name="thm_LightTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@color/c_colorLight</item>
    </style>

    <style name="thm_DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@color/c_colorDark</item>
    </style>

    <style name="stl_littleButtonStyle">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">50dp</item>

        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="stl_bigButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>

        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>
