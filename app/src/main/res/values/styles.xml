<resources>

    <style name="thm_LightTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@color/c_colorLight</item>
    </style>

    <style name="thm_DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@color/c_colorDark</item>
    </style>



    <style name="stl_layoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>

        <item name="android:paddingLeft">@dimen/d_size_30dp</item>
        <item name="android:paddingRight">@dimen/d_size_30dp</item>
    </style>



    <style name="stl_bigStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d_size_50dp</item>

        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/d_textSize_25sp</item>
    </style>

    <style name="stl_littleStyle">
        <item name="android:layout_width">@dimen/d_size_90dp</item>
        <item name="android:layout_height">@dimen/d_size_50dp</item>

        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/d_textSize_20sp</item>
    </style>

    <style name="stl_tinyStyle">
        <item name="android:layout_width">@dimen/d_size_35dp</item>
        <item name="android:layout_height">@dimen/d_size_25dp</item>

        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/d_textSize_6dsp</item>
    </style>

    <style name="stl_space">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d_size_30dp</item>

        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>
